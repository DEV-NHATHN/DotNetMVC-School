@model IEnumerable<AppUser>

@using AppMVC.Menu
@inject AdminSidebarService _AdminSidebarService

@{
    ViewData["Title"] = "Student";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <a href="https://localhost:3000/admin/school-management/student/Index?p=1&pagesize=1">
        List with Paging
    </a>
    <br/>
    <br />
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <p>Total: @Model.Count() </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th class="w-300">
                    @Html.DisplayNameFor(model => model.HomeAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                @* <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th> *@
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                @* <th>
                    @Html.DisplayNameFor(model => model.SchoolId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassId)
                </th> *@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>

                    <td class="w-300" data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayFor(modelItem => item.HomeAddress)">
                        @Html.DisplayFor(modelItem => item.HomeAddress)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    @* <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    @* <td>
                        @Html.DisplayFor(modelItem => item.SchoolId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassId)
                    </td> *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_PagingXTL" model="@ViewBag.pagingModel" />
</body>
</html>


@{
    _AdminSidebarService.SetActive("Student", "Index", "SchoolManagement");
}

@section Sidebar
    {
    @Html.Raw(_AdminSidebarService.renderHtml())
}